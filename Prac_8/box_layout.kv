BoxLayout:
    orientation: 'vertical'
    Button:
        text: 'Clear'
        on_press: input_name.text = ''  # Clears the TextInput when pressed
    TextInput:
        id: input_name
        hint_text: 'Enter your name here'
    Button:
        text: 'Greet'
        on_press: app.handle_greet()
    Label:
        id: output_label
        text: 'Enter your name'
        color: (1, 1, 0, 1)